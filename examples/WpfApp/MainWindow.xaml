<Window x:Class="Examples.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:Examples.WpfApp"
    Title="MainWindow" Height="350" Width="525">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
      <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
      <TextBox Width="200" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
      <Button Content="Add" Margin="8,0,0,0" Command="{Binding AddItem}"/>
    </StackPanel>
    <ListBox Grid.Row="1" ItemsSource="{Binding Items}"/>
  </Grid>
</Window>
